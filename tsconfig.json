{
  "include": ["lib"],
  "exclude": ["lib/**/*.stories.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["lib/*"],
      "@components/*": ["lib/components/*"],
      "@storybook/*": ["lib/storybook/*"],
    }
  }
}